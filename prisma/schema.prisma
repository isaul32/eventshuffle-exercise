generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id     Int        @id @default(autoincrement())
  name   String
  people String[]
  dates  DateTime[] @db.Date
  votes  Vote[]
}

model Vote {
  date    DateTime @db.Date
  name    String
  eventId Int
  event   Event    @relation(fields: [eventId], references: [id])

  @@unique([name, date])
}
